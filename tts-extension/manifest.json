{
  "name": "TTS",
  "description": "Text-to-speech",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "host_permissions": [
      "http://127.0.0.1:8000/*"
    ]
  }
}